<Application
    x:Class="Turali.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Turali"
    xmlns:view="clr-namespace:Turali.Views"
    xmlns:vm="clr-namespace:Turali.ViewModels"
    xmlns:vm1="clr-namespace:Turali.ViewModels.Client"
    xmlns:vm2="clr-namespace:Turali.ViewModels.Order"
    xmlns:vm3="clr-namespace:Turali.ViewModels.Tour"
    xmlns:vm4="clr-namespace:Turali.ViewModels.Manager"
    xmlns:vm5="clr-namespace:Turali.ViewModels.Booking">
    <Application.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type vm:MainViewModel}">
                <view:MainView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
                <view:DashboardView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm1:ClientsViewModel}">
                <view:ClientsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm1:ClientDetailsViewModel}">
                <view:ClientDetailsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm2:OrdersViewModel}">
                <view:OrdersView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm3:ToursViewModel}">
                <view:ToursView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm4:ManagersViewModel}">
                <view:ManagersView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm4:ManagerDetailsViewModel}">
                <view:ManagerDetailsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm3:TourDetailsViewModel}">
                <view:TourDetailsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm2:NewOrderViewModel}">
                <view:NewOrderView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm5:BookingsViewModel}">
                <view:BookingsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm5:BookingDetailsViewModel}">
                <view:BookingDetailsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm5:NewBookingViewModel}">
                <view:NewBookingView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm2:OrderDetailsViewModel}">
                <view:OrderDetailsView />
            </DataTemplate>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="Styles/TextBoxStyles.xaml" />
                <ResourceDictionary Source="Styles/ScrollBarStyles.xaml" />
                <ResourceDictionary Source="Styles/UIColors.xaml" />
                <ResourceDictionary Source="Styles/ComboBoxStyles.xaml" />
                <ResourceDictionary Source="Styles/DatePickerStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
