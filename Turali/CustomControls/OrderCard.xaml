<UserControl
    x:Class="Turali.CustomControls.OrderCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:Turali.CustomControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="300"
    Height="280"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D3748" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="10"
                        Opacity="0.4"
                        ShadowDepth="2"
                        Color="Black" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#E2E8F0" />
        </Style>

        <Style x:Key="InfoStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#A0AEC0" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </UserControl.Resources>

    <Border Margin="10" Style="{StaticResource CardStyle}">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,10"
                Orientation="Horizontal">
                <TextBlock Style="{StaticResource TitleStyle}" Text="Order #" />
                <TextBlock
                    d:Text="999"
                    Style="{StaticResource TitleStyle}"
                    Text="{Binding Id}" />
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="0,10,0,0">
                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <TextBlock
                        FontWeight="SemiBold"
                        Style="{StaticResource InfoStyle}"
                        Text="Client: " />
                    <TextBlock
                        Margin="0,0,5,0"
                        d:Text="John"
                        Style="{StaticResource InfoStyle}"
                        Text="{Binding Client.FirstName}" />
                    <TextBlock
                        d:Text="Doe"
                        Style="{StaticResource InfoStyle}"
                        Text="{Binding Client.LastName}" />
                </StackPanel>

                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <TextBlock
                        FontWeight="SemiBold"
                        Style="{StaticResource InfoStyle}"
                        Text="Tour: " />
                    <TextBlock
                        d:Text="Amazing Tour"
                        Style="{StaticResource InfoStyle}"
                        Text="{Binding Tour.Name}" />
                </StackPanel>

                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <TextBlock
                        FontWeight="SemiBold"
                        Style="{StaticResource InfoStyle}"
                        Text="Manager: " />
                    <TextBlock
                        Margin="0,0,5,0"
                        d:Text="Alice"
                        Style="{StaticResource InfoStyle}"
                        Text="{Binding Manager.FirstName}" />
                    <TextBlock
                        d:Text="Smith"
                        Style="{StaticResource InfoStyle}"
                        Text="{Binding Manager.LastName}" />
                </StackPanel>

                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <TextBlock
                        FontWeight="SemiBold"
                        Style="{StaticResource InfoStyle}"
                        Text="Order Date: " />
                    <TextBlock
                        d:Text="15.04.2025"
                        Style="{StaticResource InfoStyle}"
                        Text="{Binding OrderDate, StringFormat=dd.MM.yyyy}" />
                </StackPanel>

                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <TextBlock
                        FontWeight="SemiBold"
                        Style="{StaticResource InfoStyle}"
                        Text="Status: " />
                    <TextBlock
                        d:Text="Pending"
                        Style="{StaticResource InfoStyle}"
                        Text="{Binding Status}" />
                </StackPanel>

                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <TextBlock
                        FontWeight="SemiBold"
                        Style="{StaticResource InfoStyle}"
                        Text="Total Price: " />
                    <TextBlock
                        d:Text="$1500.00"
                        Style="{StaticResource InfoStyle}"
                        Text="{Binding TotalPrice, StringFormat=C}" />
                </StackPanel>
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                Margin="0,10,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Width="80"
                    Content="Details"
                    Style="{StaticResource ActionButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
