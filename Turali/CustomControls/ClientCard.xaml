<UserControl
    x:Class="Turali.CustomControls.ClientCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:Turali.CustomControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="300"
    Height="260"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D3748" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="10"
                        Opacity="0.4"
                        ShadowDepth="2"
                        Color="Black" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NameStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#E2E8F0" />
        </Style>

        <Style x:Key="InfoStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#A0AEC0" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </UserControl.Resources>

    <Border Margin="10" Style="{StaticResource CardStyle}">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Width="40" Height="40">
                    <Ellipse
                        Width="40"
                        Height="40"
                        Fill="#E2E8F0" />
                    <fa:IconImage
                        Width="20"
                        Height="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="#2D3748"
                        Icon="UserAlt" />
                </Grid>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,5,0"
                            d:Text="John"
                            Style="{StaticResource NameStyle}"
                            Text="{Binding FirstName}" />
                        <TextBlock
                            d:Text="Doe"
                            Style="{StaticResource NameStyle}"
                            Text="{Binding LastName}" />
                    </StackPanel>
                    <TextBlock
                        d:Text="john.doe@example.com"
                        Style="{StaticResource InfoStyle}"
                        Text="{Binding Email}" />
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="1" Margin="0,15,0,0">
                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <TextBlock
                        FontWeight="SemiBold"
                        Style="{StaticResource InfoStyle}"
                        Text="Phone: " />
                    <TextBlock
                        d:Text="+1 (555) 123-4567"
                        Style="{StaticResource InfoStyle}"
                        Text="{Binding Phone}" />
                </StackPanel>

                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <TextBlock
                        FontWeight="SemiBold"
                        Style="{StaticResource InfoStyle}"
                        Text="Birth Date: " />
                    <TextBlock
                        d:Text="15.03.1985"
                        Style="{StaticResource InfoStyle}"
                        Text="{Binding BirthDate, StringFormat=dd.MM.yyyy}" />
                </StackPanel>

                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <TextBlock
                        FontWeight="SemiBold"
                        Style="{StaticResource InfoStyle}"
                        Text="Passport: " />
                    <TextBlock
                        d:Text="AB1234567"
                        Style="{StaticResource InfoStyle}"
                        Text="{Binding PassportNumber}" />
                </StackPanel>

                <StackPanel Margin="0,5">
                    <TextBlock
                        FontWeight="SemiBold"
                        Style="{StaticResource InfoStyle}"
                        Text="Address: " />
                    <TextBlock
                        d:Text="123 Main St, City, Country"
                        Style="{StaticResource InfoStyle}"
                        Text="{Binding Address}" />
                </StackPanel>
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                Margin="0,10,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Width="80"
                    Command="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    CommandParameter="{Binding CommandParameter, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Content="Details"
                    Style="{StaticResource ActionButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
