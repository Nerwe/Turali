<UserControl
    x:Class="Turali.CustomControls.BookingListItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:Turali.CustomControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Height="50"
    d:Width="900"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D3748" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="10"
                        Opacity="0.4"
                        ShadowDepth="2"
                        Color="Black" />
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#E2E8F0" />
        </Style>
        <Style x:Key="InfoStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#A0AEC0" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </UserControl.Resources>
    <Border Padding="10">
        <Border.Background>
            <SolidColorBrush Opacity="0.7" Color="#1F2937" />
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="5"
                Direction="320"
                Opacity="0.7"
                ShadowDepth="1"
                Color="Black" />
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <fa:IconImage
                    Grid.Column="0"
                    Width="16"
                    Height="16"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Icon="Hotel" />
                <TextBlock
                    VerticalAlignment="Center"
                    Style="{StaticResource InfoStyle}"
                    Text="Booking: #" />
                <TextBlock
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    d:Text="999"
                    Style="{StaticResource InfoStyle}"
                    Text="{Binding Id}" />
            </StackPanel>
            <StackPanel
                Grid.Column="1"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <fa:IconImage
                    Grid.Column="0"
                    Width="16"
                    Height="16"
                    Margin="0,0,10,0"
                    Foreground="White"
                    Icon="UserAlt" />
                <TextBlock
                    VerticalAlignment="Center"
                    Style="{StaticResource InfoStyle}"
                    Text="Client: " />
                <TextBlock
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    d:Text="John"
                    Style="{StaticResource InfoStyle}"
                    Text="{Binding Client.FirstName}" />
                <TextBlock
                    VerticalAlignment="Center"
                    d:Text="Doe"
                    Style="{StaticResource InfoStyle}"
                    Text="{Binding Client.LastName}" />
            </StackPanel>
            <StackPanel
                Grid.Column="2"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <fa:IconImage
                    Grid.Column="0"
                    Width="16"
                    Height="16"
                    Margin="0,0,10,0"
                    Foreground="White"
                    Icon="ContactCard" />
                <TextBlock
                    VerticalAlignment="Center"
                    Style="{StaticResource InfoStyle}"
                    Text="Passport: " />
                <TextBlock
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    d:Text="P123123"
                    Style="{StaticResource InfoStyle}"
                    Text="{Binding Client.PassportNumber}" />
            </StackPanel>
            <Button
                Grid.Column="3"
                Width="80"
                Command="{Binding DataContext.ShowBookingDetailsViewCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                CommandParameter="{Binding}"
                Content="Details"
                Style="{StaticResource ActionButtonStyle}" />
        </Grid>
    </Border>
</UserControl>
