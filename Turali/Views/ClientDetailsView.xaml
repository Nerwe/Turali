<UserControl
    x:Class="Turali.Views.ClientDetailsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:client="clr-namespace:Turali.ViewModels.Client"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:Turali.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=client:ClientDetailsViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D3748" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="10"
                        Opacity="0.4"
                        ShadowDepth="2"
                        Color="Black" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NameStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#E2E8F0" />
        </Style>

        <Style x:Key="InfoStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#A0AEC0" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </UserControl.Resources>
    <ScrollViewer>
        <Border Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid
                        Grid.Column="0"
                        Width="90"
                        Height="90">
                        <Ellipse
                            Width="90"
                            Height="90"
                            Fill="#E2E8F0" />
                        <fa:IconImage
                            Width="45"
                            Height="45"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="#2D3748"
                            Icon="UserAlt" />
                    </Grid>
                    <StackPanel
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,5,0"
                                d:Text="John"
                                Style="{StaticResource NameStyle}"
                                Text="{Binding Client.FirstName}" />
                            <TextBlock
                                d:Text="Doe"
                                Style="{StaticResource NameStyle}"
                                Text="{Binding Client.LastName}" />
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                d:Text="john.doe@example.com"
                                Style="{StaticResource InfoStyle}"
                                Text="{Binding Client.Email}" />
                            <TextBlock
                                d:Text="+1 (555) 123-4567"
                                Style="{StaticResource InfoStyle}"
                                Text="{Binding Client.Phone}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.Column="0"
                        Margin="5"
                        Style="{StaticResource CardStyle}">
                        <StackPanel Margin="15">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage
                                    Width="16"
                                    Height="16"
                                    Margin="0,0,5,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Icon="ContactBook" />
                                <TextBlock Style="{StaticResource NameStyle}" Text="Contacts" />
                            </StackPanel>
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Style="{StaticResource InfoStyle}"
                                    Text="Email: " />
                                <TextBlock
                                    d:Text="john.doe@example.com"
                                    Style="{StaticResource InfoStyle}"
                                    Text="{Binding Client.Email}" />
                            </StackPanel>
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Style="{StaticResource InfoStyle}"
                                    Text="Phone: " />
                                <TextBlock
                                    d:Text="+1 (555) 123-4567"
                                    Style="{StaticResource InfoStyle}"
                                    Text="{Binding Client.Phone}" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Border
                        Grid.Column="1"
                        Margin="5"
                        Style="{StaticResource CardStyle}">
                        <StackPanel Margin="15">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage
                                    Width="16"
                                    Height="16"
                                    Margin="0,0,5,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Icon="ContactCard" />
                                <TextBlock Style="{StaticResource NameStyle}" Text="Info" />
                            </StackPanel>
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Style="{StaticResource InfoStyle}"
                                    Text="FirstName: " />
                                <TextBlock
                                    d:Text="John"
                                    Style="{StaticResource InfoStyle}"
                                    Text="{Binding Client.FirstName}" />
                            </StackPanel>
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Style="{StaticResource InfoStyle}"
                                    Text="LastName: " />
                                <TextBlock
                                    d:Text="Doe"
                                    Style="{StaticResource InfoStyle}"
                                    Text="{Binding Client.LastName}" />
                            </StackPanel>
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Style="{StaticResource InfoStyle}"
                                    Text="Birth Date: " />
                                <TextBlock
                                    d:Text="15.03.1985"
                                    Style="{StaticResource InfoStyle}"
                                    Text="{Binding Client.BirthDate, StringFormat=dd.MM.yyyy}" />
                            </StackPanel>

                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Style="{StaticResource InfoStyle}"
                                    Text="Passport: " />
                                <TextBlock
                                    d:Text="AB1234567"
                                    Style="{StaticResource InfoStyle}"
                                    Text="{Binding Client.PassportNumber}" />
                            </StackPanel>

                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Style="{StaticResource InfoStyle}"
                                    Text="Passport Expiry: " />
                                <TextBlock
                                    d:Text="15.03.2025"
                                    Style="{StaticResource InfoStyle}"
                                    Text="{Binding Client.PassportExpiry, StringFormat=dd.MM.yyyy}" />
                            </StackPanel>

                            <StackPanel Margin="0,5">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Style="{StaticResource InfoStyle}"
                                    Text="Address: " />
                                <TextBlock
                                    d:Text="123 Main St, City, Country"
                                    Style="{StaticResource InfoStyle}"
                                    Text="{Binding Client.Address}" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Border
                        Grid.Column="2"
                        Margin="5"
                        Style="{StaticResource CardStyle}">
                        <StackPanel Margin="15">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage
                                    Width="16"
                                    Height="16"
                                    Margin="0,0,5,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Icon="Plane" />
                                <TextBlock Style="{StaticResource NameStyle}" Text="Tours" />
                            </StackPanel>
                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Style="{StaticResource InfoStyle}"
                                    Text="Tours Count: " />
                                <TextBlock
                                    d:Text="999"
                                    Style="{StaticResource InfoStyle}"
                                    Text="{Binding Client.FirstName}" />
                            </StackPanel>

                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Style="{StaticResource InfoStyle}"
                                    Text="Reviews: " />
                                <TextBlock
                                    d:Text="777"
                                    Style="{StaticResource InfoStyle}"
                                    Text="{Binding Client.FirstName}" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.Column="0"
                        Margin="5"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <Button
                            Width="90"
                            Content="User Orders"
                            Style="{StaticResource ActionButtonStyle}" />
                    </StackPanel>
                    <StackPanel
                        Grid.Column="1"
                        Margin="5"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Width="90"
                            Margin="0,0,5,0"
                            Content="Edit"
                            Style="{StaticResource ActionButtonStyle}" />
                        <Button
                            Width="90"
                            Content="Delete"
                            Style="{StaticResource ActionButtonStyle}" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </ScrollViewer>
</UserControl>
