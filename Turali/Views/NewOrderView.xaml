<UserControl
    x:Class="Turali.Views.NewOrderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customcontrol="clr-namespace:Turali.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:Turali.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:order="clr-namespace:Turali.ViewModels.Order"
    d:DataContext="{d:DesignInstance Type=order:NewOrderViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D3748" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="10"
                        Opacity="0.4"
                        ShadowDepth="2"
                        Color="Black" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NameStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#E2E8F0" />
        </Style>

        <Style x:Key="InfoStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#A0AEC0" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Margin" Value="0,10,5,0" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid
                Grid.Column="0"
                Width="90"
                Height="90">
                <Ellipse
                    Width="90"
                    Height="90"
                    Fill="#E2E8F0" />
                <fa:IconImage
                    Width="45"
                    Height="45"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="#2D3748"
                    Icon="ListUl" />
            </Grid>
        </Grid>
        <Border
            Grid.Column="1"
            Margin="10"
            Style="{StaticResource CardStyle}">
            <StackPanel Margin="15" Orientation="Vertical">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        FontWeight="SemiBold"
                        Style="{StaticResource InfoStyle}"
                        Text="Client: " />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        FontWeight="SemiBold"
                        Style="{StaticResource InfoStyle}"
                        Text="Tour: " />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        FontWeight="SemiBold"
                        Style="{StaticResource InfoStyle}"
                        Text="Manager: " />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        FontWeight="SemiBold"
                        Style="{StaticResource InfoStyle}"
                        Text="Transport: " />

                    <ComboBox
                        Grid.Row="0"
                        Grid.Column="1"
                        DisplayMemberPath="FullDisplay"
                        IsEditable="True"
                        IsTextSearchEnabled="True"
                        ItemsSource="{Binding Clients}"
                        SelectedValue="{Binding Order.ClientId, UpdateSourceTrigger=PropertyChanged}"
                        SelectedValuePath="Id"
                        Style="{StaticResource ComboBoxFlatStyleOne}" />
                    <ComboBox
                        Grid.Row="1"
                        Grid.Column="1"
                        DisplayMemberPath="FullDisplay"
                        IsEditable="True"
                        ItemsSource="{Binding Tours}"
                        SelectedValue="{Binding Order.TourId, UpdateSourceTrigger=PropertyChanged}"
                        SelectedValuePath="Id"
                        Style="{StaticResource ComboBoxFlatStyleOne}" />
                    <ComboBox
                        Grid.Row="2"
                        Grid.Column="1"
                        DisplayMemberPath="FullDisplay"
                        IsEditable="True"
                        ItemsSource="{Binding Managers}"
                        SelectedValue="{Binding Order.ManagerId, UpdateSourceTrigger=PropertyChanged}"
                        SelectedValuePath="Id"
                        Style="{StaticResource ComboBoxFlatStyleOne}" />
                    <ComboBox
                        Grid.Row="3"
                        Grid.Column="1"
                        DisplayMemberPath="Name"
                        IsEditable="True"
                        ItemsSource="{Binding TransportTypes}"
                        SelectedValue="{Binding Order.TransportTypeId, UpdateSourceTrigger=PropertyChanged}"
                        SelectedValuePath="Id"
                        Style="{StaticResource ComboBoxFlatStyleOne}" />
                </Grid>
                <StackPanel Margin="0,5">
                    <TextBlock
                        FontWeight="SemiBold"
                        Style="{StaticResource InfoStyle}"
                        Text="Notes: " />
                    <TextBox
                        Grid.Column="0"
                        Height="30"
                        HorizontalAlignment="Stretch"
                        AcceptsReturn="True"
                        Style="{StaticResource mainTextBox}"
                        Text="{Binding Order.Notes}"
                        TextWrapping="Wrap" />
                    <StackPanel
                        Grid.Row="2"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            Width="80"
                            Command="{Binding NewOrderCommand}"
                            Content="Create"
                            Style="{StaticResource ActionButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
