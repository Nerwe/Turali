<UserControl
    x:Class="Turali.Views.TourDetailsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customcontrol="clr-namespace:Turali.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:Turali.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tour="clr-namespace:Turali.ViewModels.Tour"
    d:DataContext="{d:DesignInstance Type=tour:TourDetailsViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D3748" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="10"
                        Opacity="0.4"
                        ShadowDepth="2"
                        Color="Black" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NameStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#E2E8F0" />
        </Style>

        <Style x:Key="InfoStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#A0AEC0" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </UserControl.Resources>
    <Border Margin="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid
                    Grid.Column="0"
                    Width="90"
                    Height="90">
                    <Ellipse
                        Width="90"
                        Height="90"
                        Fill="#E2E8F0" />
                    <fa:IconImage
                        Width="45"
                        Height="45"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="#2D3748"
                        Icon="Plane" />
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="0"
                    Margin="5"
                    Style="{StaticResource CardStyle}">
                    <StackPanel
                        Margin="15"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage
                                Width="16"
                                Height="16"
                                Margin="0,0,5,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Icon="Globe" />
                            <TextBlock
                                d:Text="Cruise"
                                Style="{StaticResource NameStyle}"
                                Text="{Binding Tour.Name}" />
                        </StackPanel>
                        <StackPanel Margin="0,5" Orientation="Horizontal">
                            <TextBlock
                                FontWeight="SemiBold"
                                Style="{StaticResource InfoStyle}"
                                Text="Destination: " />
                            <TextBlock
                                d:Text="Europe"
                                Style="{StaticResource InfoStyle}"
                                Text="{Binding Tour.Destination}" />
                        </StackPanel>
                        <StackPanel Margin="0,5" Orientation="Horizontal">
                            <TextBlock
                                FontWeight="SemiBold"
                                Style="{StaticResource InfoStyle}"
                                Text="Date: " />
                            <TextBlock
                                d:Text="22.04.2025"
                                Style="{StaticResource InfoStyle}"
                                Text="{Binding Tour.StartDate, StringFormat=dd.MM.yyyy}" />
                            <TextBlock Style="{StaticResource InfoStyle}" Text=" - " />
                            <TextBlock
                                d:Text="30.04.2025"
                                Style="{StaticResource InfoStyle}"
                                Text="{Binding Tour.EndDate, StringFormat=dd.MM.yyyy}" />
                        </StackPanel>
                        <StackPanel Margin="0,5" Orientation="Horizontal">
                            <TextBlock
                                FontWeight="SemiBold"
                                Style="{StaticResource InfoStyle}"
                                Text="Capacity: " />
                            <TextBlock
                                d:Text="10"
                                Style="{StaticResource InfoStyle}"
                                Text="{Binding Tour.MaxCapacity}" />
                        </StackPanel>
                        <StackPanel Margin="0,5" Orientation="Horizontal">
                            <TextBlock
                                FontWeight="SemiBold"
                                Style="{StaticResource InfoStyle}"
                                Text="Price: " />
                            <TextBlock
                                d:Text="1000"
                                Style="{StaticResource InfoStyle}"
                                Text="{Binding Tour.Price}" />
                        </StackPanel>
                        <StackPanel Margin="0,5" Orientation="Horizontal">
                            <TextBlock
                                FontWeight="SemiBold"
                                Style="{StaticResource InfoStyle}"
                                Text="Status: " />
                            <TextBlock
                                d:Text="Active"
                                Style="{StaticResource InfoStyle}"
                                Text="{Binding Tour.Status}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border
                    Grid.Row="1"
                    Margin="5"
                    Style="{StaticResource CardStyle}">
                    <StackPanel
                        Margin="15"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage
                                Width="16"
                                Height="16"
                                Margin="0,0,5,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Icon="FileText" />
                            <TextBlock Style="{StaticResource NameStyle}" Text="Description" />
                        </StackPanel>
                        <TextBlock
                            d:Text="Some text about tour details"
                            FontWeight="SemiBold"
                            Style="{StaticResource InfoStyle}"
                            Text="{Binding Tour.Description}" />
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
