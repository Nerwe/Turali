<UserControl
    x:Class="Turali.Views.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:Turali.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Turali.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:DashboardViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" CornerRadius="0, 0, 0, 10">
            <Border.Background>
                <SolidColorBrush Color="#1F2937" />
            </Border.Background>
            <StackPanel>
                <Image
                    Height="30"
                    Margin="15"
                    Source="/Images/logo-no-background.png" />
                <RadioButton
                    Command="{Binding ClientsViewCommand}"
                    IsChecked="True"
                    Style="{StaticResource menuRadioButton}"
                    Tag="White">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage
                            Margin="10,0,0,0"
                            Icon="UserAlt"
                            Style="{StaticResource menuButtonIcon}" />
                        <TextBlock
                            Margin="10,0,0,0"
                            Style="{StaticResource menuButtonText}"
                            Text="Clients" />
                    </StackPanel>
                </RadioButton>
                <RadioButton
                    Command="{Binding ManagersViewCommand}"
                    Style="{StaticResource menuRadioButton}"
                    Tag="White">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage
                            Margin="10,0,0,0"
                            Icon="UserTie"
                            Style="{StaticResource menuButtonIcon}" />
                        <TextBlock
                            Margin="10,0,0,0"
                            Style="{StaticResource menuButtonText}"
                            Text="Managers" />
                    </StackPanel>
                </RadioButton>
                <RadioButton
                    Command="{Binding ToursViewCommand}"
                    Style="{StaticResource menuRadioButton}"
                    Tag="White">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage
                            Margin="10,0,0,0"
                            Icon="Plane"
                            Style="{StaticResource menuButtonIcon}" />
                        <TextBlock
                            Margin="10,0,0,0"
                            Style="{StaticResource menuButtonText}"
                            Text="Tours" />
                    </StackPanel>
                </RadioButton>
                <RadioButton
                    Command="{Binding OrdersViewCommand}"
                    Style="{StaticResource menuRadioButton}"
                    Tag="White">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage
                            Margin="10,0,0,0"
                            Icon="ListUl"
                            Style="{StaticResource menuButtonIcon}" />
                        <TextBlock
                            Margin="10,0,0,0"
                            Style="{StaticResource menuButtonText}"
                            Text="Orders" />
                    </StackPanel>
                </RadioButton>
                <RadioButton
                    Command="{Binding SettingsViewCommand}"
                    Style="{StaticResource menuRadioButton}"
                    Tag="White">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage
                            Margin="10,0,0,0"
                            Icon="Cog"
                            Style="{StaticResource menuButtonIcon}" />
                        <TextBlock
                            Margin="10,0,0,0"
                            Style="{StaticResource menuButtonText}"
                            Text="Settings" />
                    </StackPanel>
                </RadioButton>
                <RadioButton
                    Command="{Binding AboutViewCommand}"
                    Style="{StaticResource menuRadioButton}"
                    Tag="White">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage
                            Margin="10,0,0,0"
                            Icon="InfoCircle"
                            Style="{StaticResource menuButtonIcon}" />
                        <TextBlock
                            Margin="10,0,0,0"
                            Style="{StaticResource menuButtonText}"
                            Text="About" />
                    </StackPanel>
                </RadioButton>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" CornerRadius="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    d:Text="TITLE"
                    FontFamily="Monserrat"
                    FontSize="16"
                    FontWeight="Medium"
                    Foreground="White"
                    Text="{Binding Title}" />
                <ContentControl Grid.Row="2" Content="{Binding CurrentViewModel}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
